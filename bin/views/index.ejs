<!DOCTYPE html>
<html>
  <head><% include partials/templates/head.ejs %></head>
  <body>
    <div class="ui container">
      <div class="masthead">
        <div class="ui grid">
          <div class="two column row">
            <div class="left floated column">
              <h3 class="ui header">Node Chat</h3>
            </div>
            <div class="right floated column right aligned">
              <a href="/user/logout" class="ui primary button">Logout</a>
            </div>
          </div>
        </div>
      </div>
      <div id="messages" class="ui comments"></div>
      <form id="message-form" class="ui form">
        <div class="ui fluid action input">
          <input type="text" name="message" autocomplete="off" autofocus="on" placeholder="Type your message...">
          <button class="ui primary button">Send</button>
        </div>
      </form>
      <span id="info" class="ui info"></span>
    </div>
    <% include partials/templates/jsdefaults.ejs %>
    <script>
      var username = '<%= user.username %>';
      if(typeof username != 'undefined') {
        join(username);
      }
    </script>
  </body>
</html>